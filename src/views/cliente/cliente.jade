extends ../layout
block contenido 
  section.content-header
    h1
      | Mis Clientes
    |       
    ol.breadcrumb
      li
        a(href='#')
          i.fa.fa-dashboard
          |  Level
      |         
      li.active Here
  // Main content
  section.content.container-fluid   
    div.row
      div.col-xs-12
        div.box
          div.box-header
            button#openModalCliente.btn.btn-success + Ingresar nuevo Cliente
          div.box-body
            .row
              .col-md-2
              .col-md-8
                table#tablaClientes.table.table-bordered.table-hover
                  thead.tabla_default
                    tr
                      th #
                      th Nombres
                      th Apellidos
                      th Ci
                      th Dirección
                      th Email
                      th Teléfono      
                      th Valor Vendido      
                    tbody
              .col-md-2
            include ../partials/_addCliente.jade

