#modalMostrarVentaFecha.modal.fade
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
        |                 
        h4.modal-title#tituloMostrarVentaFecha
      |               
      .modal-body
        table#tablaVentaFecha.table.table-bordered.table-hover(style="width: 100%;")
              thead.tabla_default
                tr
                  th #
                  th Cliente
                  th Ci
                  th Fecha
                  th Valor Venta
                tbody
      .modal-footer     
        button.btn.btn-default(type='button', data-dismiss='modal') 
          i.fa.fa-close
          | &nbsp; &nbsp; Cerrar
    // /.modal-content
  // /.modal-dialog
// /.modal



#modalMostrarVenta.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
        |                 
        h4.modal-title Factura / Nota de Venta
      |               
      div#cuerpoFactura.modal-body
        h4#nombre_comp 
        .row
          .col-md-7
              b Dirección:
              span#direccion_comp 
              br
              b Teléfono:
              span#telefono_comp   
              hr
          .col-md-5
            table#tablaDatosFact(border=1 style="width:100%;")
              tr
                td(style="padding-left: 5px;")
                  b COMPROBANTE #:
                  span#num_venta 
              tr
                td(style="padding-left: 5px;") 
                  b FECHA:
                  span#fecha_venta 
        .row
          .col-md-12
            table#tablaDatosCli(style="width:100%;")
              tr
                td(style="padding-left: 5px;")
                  b CLIENTE:
                  span#nom_cliente_venta
                td(style="padding-left: 5px; width:190px;") 
                  b CI/RUC:
                  span#ci_cliente_venta 
              tr
                td(style="padding-left: 5px;") 
                  b DIRECCIÓN:
                  span#dir_cliente_venta 
                td(style="padding-left: 5px;")
                  b TELÉFONO:
                  span#telf_cliente_venta 
        br
        .row
          table#tablaVenta.table.table-bordered.table-hover(style="width: 98%;")
            thead#headTablaVenta.tabla_default
              tr
                th Producto
                th Cant.
                th V. Uni
                th Total
              tbody
          table#tablaSumaFact.pull-right(border=1 style="width:35%; border: 1px solid #9E9E9E; margin-right: 7px;")
              tr
                td(style="padding-left: 5px;")
                  b Sub Total:
                td(style="padding-right: 10px;  text-align: right;")
                  span#sub_total_venta 
              tr
                td(style="padding-left: 5px;") 
                  b Iva 12%:
                td(style="padding-right: 10px;  text-align: right;")
                  span#iva_venta  
              tr
                td(style="padding-left: 5px;") 
                  b TOTAL:
                td(style="padding-right: 10px;  text-align: right;     font-size: 18px;")
                  b#total_final_venta  

          table#tablaFirmas.pull-left( style="width:35%;  margin-top: 20px;")
              tr
                td(style="padding: 5px;")
                  span _________________________
                td(style="padding: 10px;  text-align: center;")
                  span _________________________ 
              tr
                td(style="padding-left: 5px;") 
                  span F. Vendedor
                td(style="padding-right: 10px;  text-align: center;")
                  span F. cliente (Recibi conforme)  
             

      .modal-footer  
        button#btnReimprimir.btn.bg-purple(type='button') 
          i.fa.fa-print
          | &nbsp; &nbsp; Imprimir Comprobante              

    // /.modal-content
  // /.modal-dialog
// /.modal