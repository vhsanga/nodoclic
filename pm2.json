{
    "apps": [
        {
            "name": "CLIENT",
            "script": "npm",
            "args": "start",
            "ignore-watch": [
                "./src/stylus",
                "./src/public"
            ],
            "watch_options": {
                "usePolling": true
            },
            "error_file": "./logs/app-error.log",
            "out_file": "./logs/app-out.log",
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}
